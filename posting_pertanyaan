<?php
include 'config.php';

if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $judul_pertanyaan = $_POST['judul_pertanyaan'];
    $isi_pertanyaan = $_POST['isi_pertanyaan'];
    $id_pengguna = 1;
    $id_tanaman = $_POST['id_tanaman'];

    $sql = "INSERT INTO pertanyaan (judul_pertanyaan, isi_pertanyaan, id_pengguna, id_tanaman, tanggal_posting) 
            VALUES ('$judul_pertanyaan', '$isi_pertanyaan', $id_pengguna, $id_tanaman, CURDATE())";

    if ($conn->query($sql) === TRUE) {
        echo "Pertanyaan berhasil diposting!";
    } else {
        echo "Error: " . $sql . "<br>" . $conn->error;
    }
}

$conn->close();
?>

<!DOCTYPE html>
<html>
<head>
    <title>Posting Pertanyaan</title>
</head>
<body>
    <form method="POST" action="">
        Judul Pertanyaan: <input type="text" name="judul_pertanyaan" required><br>
        Pertanyaan: <textarea name="isi_pertanyaan" required></textarea><br>
        Jenis Tanaman: <input type="text" name="id_tanaman" required><br>
        <button type="submit">Posting Pertanyaan</button>
    </form>
</body>
</html>
