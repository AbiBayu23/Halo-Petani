<?php
include 'config.php';

if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $id_tanaman = $_POST['id_tanaman'];
    $sql = "SELECT * FROM pertanyaan WHERE id_tanaman = $id_tanaman";
    $result = $conn->query($sql);

    if ($result->num_rows > 0) {
        while ($row = $result->fetch_assoc()) {
            echo "Pertanyaan: " . $row["judul_pertanyaan"] . "<br>";
            echo "Isi: " . $row["isi_pertanyaan"] . "<br><br>";
        }
    } else {
        echo "Tidak ada pertanyaan untuk kategori ini.";
    }
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Filter Pertanyaan</title>
</head>
<body>
    <form method="POST" action="">
        Kategori Pertanyaan: <input type="text" name="id_tanaman" required>
        <button type="submit">Filter</button>
    </form>
</body>
</html>
